<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <script src="https://use.typekit.net/qwt3yjt.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    <%= stylesheet_link_tag :site %>
  </head>

  <body class="<%= page_classes %>">
    <section>
      <ul class="landing-menu">
        <li class="studio-link">
          <%= link_to 'Studio', "#{config[:site_url]}/studio" %>
        </li>
        <li class="licensing-link">
          <%= link_to 'Licensing', "#{config[:site_url]}/licensing" %>
        </li>
        <li class="composition-link">
          <%=link_to "Composition", "#{config[:site_url]}/composition" %>
        </li>
      </ul>
    </section>
  </body>
  <%= javascript_include_tag "lazyload.min.js" %>
  <%= javascript_include_tag :all %>
</html>
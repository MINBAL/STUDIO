<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <meta name="description" content="MINBAL is a music production and recording studio operated by producer/engineer Benjamin Balcom in Chicago, Illinois USA."/>
    <meta name="keywords" content="minbal, minbal studio, chicago, benjamin balcom, recording studio, producer, licensing, composition, engineer"/>
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <script src="https://use.fontawesome.com/f060f4ace6.js"></script>
    <script src="https://use.typekit.net/qwt3yjt.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    <%= stylesheet_link_tag :site %>
    <script>
      // Picture element HTML5 shiv
      document.createElement( "picture" );
    </script>
    <%= javascript_include_tag "picturefill.min.js" %>
  </head>

  <body class="<%= page_classes %>">
    <main class="">
      <div class="toggle-menu-btn">
          <span class="line"></span>
          <span class="line"></span>
          <span class="line"></span>
        </div>
      </div>
      <%= partial "page_push_nav" %>
      <div class="page-push-wrap">
        <%= partial "header" %>
        <%= yield %>
        <%= partial "footer" %>
      </div>
    </main>
  </body>
  
  <%= javascript_include_tag "lazyload.min.js" %>
  <%= javascript_include_tag :all %>
  
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-94046508-1', 'auto');
    ga('send', 'pageview');

  </script>

</html>
<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,500|Source+Code+Pro|Merriweather:700,900" rel="stylesheet">
    <script src="https://use.fontawesome.com/f060f4ace6.js"></script>
    <%= stylesheet_link_tag :site %>
    <script>
      // Picture element HTML5 shiv
      document.createElement( "picture" );
    </script>
    <%= javascript_include_tag "picturefill.min.js" %>
  </head>

  <body class="<%= page_classes %>">
    <main class="">
      <div class="toggle-menu-btn">
          <span class="line"></span>
          <span class="line"></span>
          <span class="line"></span>
        </div>
      </div>
      <%= partial "page_push_nav" %>
      <div class="page-push-wrap">
        <%= partial "header" %>
        <%= yield %>
        <%= partial "footer" %>
      </div>
    </main>
  </body>
  <%= javascript_include_tag "lazyload.min.js" %>
  <%= javascript_include_tag :all %>
</html>